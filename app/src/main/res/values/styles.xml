<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/view_regular_margin</item>
        <item name="android:layout_marginHorizontal">@dimen/display_regular_paddingHorizontal</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black_1A</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/main_button_cornerRadius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_to_text_padding</item>
    </style>

    <style name="SettingsButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/display_regular_paddingHorizontal</item>
        <item name="android:paddingVertical">@dimen/settings_button_paddingVertical</item>
        <item name="android:textColor">?attr/settings_button_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="drawableTint">?attr/settings_button_icon_color</item>
    </style>

    
    <style name="SearchTrackViewStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLength">70</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="SearchTrackViewTextTopStyle" parent="SearchTrackViewStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/search_track_view_text_top_color</item>
    </style>

    <style name="SearchTrackViewTextBottomStyle" parent="SearchTrackViewStyle">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">?attr/search_track_view_text_bottom_color</item>
        <item name="drawableTint">?attr/search_track_view_text_bottom_color</item>
    </style>

    <style name="SearchPlaceholderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/search_placeholder_text_color</item>
    </style>

    <style name="OrdinaryButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:backgroundTint">?attr/search_placeholder_button_tint_color</item>
        <item name="android:textColor">?attr/search_placeholder_button_text_color</item>
    </style>

    <style name="SearchHistoryTitleStyle">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/search_history_title_color</item>
    </style>

    <style name="AudioPlayerTextStyle">
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/audio_player_text_color</item>
    </style>

    <style name="AudioPlayerDescriptionTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLength">70</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/grayAE</item>
    </style>

    <style name="AudioPlayerDescriptionValueTextStyle" parent="AudioPlayerDescriptionTextStyle">
        <item name="android:gravity">end</item>
        <item name="android:textColor">?attr/audio_player_text_color</item>
    </style>

</resources>