<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivArtwork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/view_regular_paddingHorizontal"
        tools:src="@drawable/album_placeholder"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="32dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/icon_to_text_padding">

        <TextView
            android:id="@+id/tvTrackName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            style="@style/SearchTrackViewTextTopStyle"
            tools:text="Yesterday (Remastered 2009) длииииииииииииииииииииииииииинный" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvArtistName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="76dp"
                style="@style/SearchTrackViewTextBottomStyle"
                tools:text="The Beatles длииииииииииииииииииииииииииинный" />

            <TextView
                android:id="@+id/tvTrackTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="-76dp"
                android:drawableLeft="@drawable/dot_icon"
                style="@style/SearchTrackViewTextBottomStyle"
                tools:text="2:55 длииииииииииииииииииииииииииинный" />

        </LinearLayout>

    </LinearLayout>
        

    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/view_regular_paddingHorizontal"
        app:srcCompat="@drawable/arrow_forward_icon"
        app:tint="?attr/search_arrow_forward_icon_color" />

    </LinearLayout>

