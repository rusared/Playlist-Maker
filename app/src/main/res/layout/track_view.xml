<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivArtwork"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginVertical="8dp"
        android:layout_marginLeft="13dp"
        tools:src="@drawable/album_placeholder"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginVertical="14dp"
        android:layout_marginHorizontal="8dp">

        <TextView
            android:id="@+id/tvTrackName"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            style="@style/SearchTrackViewTextTopStyle"
            tools:text="Yesterday (Remastered 2009) длииииииииииииииииииииииииииинный" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:orientation="horizontal"
            android:layout_marginTop="1dp">

            <TextView
                android:id="@+id/tvArtistName"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:layout_marginEnd="77dp"
                style="@style/SearchTrackViewTextBottomStyle"
                tools:text="The Beatles длииииииииииииииииииииииииииинный" />

            <TextView
                android:id="@+id/tvTrackTime"
                android:layout_width="77dp"
                android:layout_height="13dp"
                android:layout_marginStart="-78dp"
                android:drawableLeft="@drawable/dot_icon"
                style="@style/SearchTrackViewTextBottomStyle"
                tools:text="2:55 длииииииииииииииииииииииииииинный" />

        </LinearLayout>

    </LinearLayout>
        

    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="12dp"
        app:srcCompat="@drawable/arrow_forward_icon"
        app:tint="?attr/search_arrow_forward_icon_color" />

    </LinearLayout>

