<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    android:orientation="vertical"
    android:id="@+id/main">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:title="@string/main_title"
        app:titleTextAppearance="@style/MainTitleTextStyle"
        app:titleTextColor="@color/white">
    </com.google.android.material.appbar.MaterialToolbar>

    <Button
        android:id="@+id/search_button"
        android:text="@string/main_button1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/first_button_marginTop"
        android:layout_marginHorizontal="@dimen/main_button_marginHorizontal"
        app:cornerRadius="@dimen/main_button_cornerRadius"
        android:backgroundTint="@color/main_button_color"
        android:textColor="@color/main_text_color"
        app:icon="@drawable/search_icon"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@color/main_text_color"
        android:foreground="?attr/selectableItemBackground"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/library_button"
        android:text="@string/main_button2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/main_button_marginTop"
        android:layout_marginHorizontal="@dimen/main_button_marginHorizontal"
        app:cornerRadius="@dimen/main_button_cornerRadius"
        android:backgroundTint="@color/main_button_color"
        android:textColor="@color/main_text_color"
        app:icon="@drawable/library_icon"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@color/main_text_color"
        android:foreground="?attr/selectableItemBackground"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/settings_button"
        android:text="@string/main_button3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/main_button_marginTop"
        android:layout_marginHorizontal="@dimen/main_button_marginHorizontal"
        android:layout_marginBottom="28dp"
        app:cornerRadius="@dimen/main_button_cornerRadius"
        android:backgroundTint="@color/main_button_color"
        android:textColor="@color/main_text_color"
        app:icon="@drawable/settings_icon"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@color/main_text_color"
        android:foreground="?attr/selectableItemBackground"
        android:textAllCaps="false" />
</LinearLayout>