<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:padding="4dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="52dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                app:icon="@drawable/arrow_back_icon"
                app:iconTint="@color/settings_title_color"
                android:layout_gravity="start|center_vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="48dp"
                android:text="@string/settings_title"
                android:textColor="@color/settings_title_color"
                android:textSize="26sp"
                android:gravity="start|center_vertical"
                android:paddingStart="12dp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_button_dimen"
        android:layout_marginTop="24dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/settings_text1"
            android:textColor="@color/settings_text_color"
            android:textSize="16sp"
            android:layout_marginVertical="21dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="44dp"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="11dp"
            android:layout_gravity="end"
            android:src="@drawable/switch_off_icon"
            app:tint="@color/settings_icon_color"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_button_dimen"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/settings_text2"
            android:textColor="@color/settings_text_color"
            android:textSize="16sp"
            android:layout_marginVertical="21dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="44dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="19dp"
            android:layout_gravity="end"
            android:src="@drawable/share_icon"
            app:tint="@color/settings_icon_color" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_button_dimen"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/settings_text3"
            android:textColor="@color/settings_text_color"
            android:textSize="16sp"
            android:layout_marginVertical="21dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="44dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="19dp"
            android:layout_gravity="end"
            android:src="@drawable/support_icon"
            app:tint="@color/settings_icon_color" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_button_dimen"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/settings_text4"
            android:textColor="@color/settings_text_color"
            android:textSize="16sp"
            android:layout_marginVertical="21dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="44dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="19dp"
            android:layout_gravity="end"
            android:src="@drawable/arrow_forward_icon"
            app:tint="@color/settings_icon_color" />
    </FrameLayout>
</LinearLayout>